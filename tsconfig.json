{
	"extends": "astro/tsconfigs/strict",
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": ["dist"],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"$config": ["site.config.ts"],
			"$public/*": ["public/*"],
			"$assets/*": ["src/assets/*"],
			"$icons/*": ["src/icons/*"],
			"$graph/*": ["src/graph/*"],
			"$utils/*": ["src/utils/*"],
			"$components/*": ["src/components/*"],
			"$i18n": ["src/i18n/index"],
			"$layouts/*": ["src/layouts/*"],
			"$styles/*": ["src/styles/*"]
		}
	}
}
