{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Astro Theme ThoughtLite Site Configuration",
	"type": "object",
	"properties": {
		"$schema": {
			"type": "string",
			"format": "uri-reference"
		},
		"title": {
			"title": "Site Title",
			"type": "string"
		},
		"prologue": {
			"title": "Site Prologue",
			"type": "string"
		},
		"author": {
			"oneOf": [
				{
					"title": "Author Name",
					"type": "string"
				},
				{
					"type": "object",
					"properties": {
						"name": {
							"title": "Author Name",
							"type": "string"
						},
						"email": {
							"title": "Author Email",
							"type": "string",
							"format": "email"
						},
						"link": {
							"title": "Author Homepage Link",
							"type": "string",
							"format": "uri"
						}
					},
					"required": [
						"name"
					],
					"additionalProperties": false
				}
			]
		},
		"description": {
			"title": "Site Description",
			"type": "string"
		},
		"copyright": {
			"title": "Creative Commons License Configuration",
			"type": "object",
			"properties": {
				"type": {
					"title": "Creative Commons 4.0 License Type",
					"enum": [
						"CC0 1.0",
						"CC BY 4.0",
						"CC BY-SA 4.0",
						"CC BY-NC 4.0",
						"CC BY-NC-SA 4.0",
						"CC BY-ND 4.0",
						"CC BY-NC-ND 4.0"
					]
				},
				"year": {
					"title": "License Year",
					"type": "string",
					"pattern": "^\\d{4}(-\\d{4})?$"
				}
			},
			"required": [
				"type",
				"year"
			],
			"additionalProperties": false
		},
		"feed": {
			"title": "Feed Configuration",
			"type": "object",
			"properties": {
				"section": {
					"title": "Feed Sections",
					"oneOf": [
						{
							"type": "string",
							"enum": [
								"*"
							]
						},
						{
							"type": "array",
							"items": {
								"type": "string",
								"enum": [
									"note",
									"jotting"
								],
								"uniqueItems": true
							}
						}
					],
					"default": "*"
				},
				"limit": {
					"title": "Feed Item Limit",
					"type": "integer",
					"minimum": 0
				}
			},
			"additionalProperties": false
		},
		"comment": {
			"title": "Comment Configuration",
			"type": "object",
			"properties": {
				"max-length": {
					"title": "Maximum Comment Length",
					"type": "integer",
					"minimum": 1
				}
			},
			"additionalProperties": false
		},
		"latest": {
			"title": "Latest Content Display",
			"type": "object",
			"properties": {
				"note": {
					"title": "Show Latest Note",
					"type": "boolean",
					"default": true
				},
				"jotting": {
					"title": "Show Latest Jotting",
					"type": "boolean",
					"default": true
				}
			}
		}
	},
	"required": [
		"title",
		"author",
		"description",
		"copyright"
	],
	"additionalProperties": false
}