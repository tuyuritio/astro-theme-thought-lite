---
import { Font } from "astro:assets";

interface Props {
	title: string;
	subtitle?: string;
	description: string;
	author?: string;
	article?: {
		timestamp: Date;
		section?: string;
		tags?: string[];
	};
}

const { title, subtitle, description, author, article } = Astro.props;
---

<html lang={Astro.currentLocale} dir={["ar", "he", "fa", "ur"].includes(Astro.currentLocale!) ? "rtl" : "ltr"}>
	<head>
		<title>{subtitle && `${subtitle} |`} {title}</title>
		<meta name="description" content={description} />

		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />

		<meta property="og:title" content={`${subtitle && `${subtitle} | `}${title}`} />
		<meta property="og:type" content={(article && "article") || "website"} />
		<meta property="og:url" content={new URL(Astro.url.pathname, Astro.site)} />
		<meta property="og:description" content={description} />
		<meta property="og:site_name" content={title} />
		<meta property="og:locale" content={Astro.currentLocale?.replace(/-(\w+)/, (_, region) => `_${region.toUpperCase()}`)} />

		<meta property="og:image" content={article ? new URL(`${Astro.url.pathname}/graph.png`, Astro.site) : new URL("graph.png", Astro.site)} />
		<meta property="og:image:alt" content={title} />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta name="twitter:card" content="summary_large_image" />

		{article && [<meta property="article:author" content={author} />, <meta property="article:published_time" content={article.timestamp.toISOString()} />, article.section && <meta property="article:section" content={article.section} />, article.tags?.map((tag: string) => <meta property="article:tag" content={tag} />)]}

		<link rel="canonical" href={new URL(Astro.url.pathname, Astro.site)} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
		<link rel="shortcut icon" href="/favicon.ico" />
		<link rel="sitemap" href="/sitemap-index.xml" />

		<Font cssVariable="--font-playwrite-mx" preload />
		<Font cssVariable="--font-maple-mono-nf-cn"	 />
		<Font cssVariable="--font-the-peak-font-plus" />

		{Astro.currentLocale === "en" && <Font cssVariable="--font-noto-serif" />}
		{Astro.currentLocale === "zh-cn" && <Font cssVariable="--font-noto-serif-sc" />}
		{Astro.currentLocale === "ja" && <Font cssVariable="--font-noto-serif-jp" />}

		<script is:inline>
			var theme = localStorage.getItem("theme");
			if (theme) document.documentElement.dataset.theme = theme;
		</script>
	</head>
	<body>
		<slot />
	</body>
</html>
