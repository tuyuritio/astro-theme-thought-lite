---
import { Icon as I } from "astro-icon/components";

interface Props {
	/** Icon name/identifier (required) - corresponds to icon file or icon set key */
	name: string;

	/** Whether to render as inline element (optional) - affects display behavior */
	inline?: boolean;

	/** Icon size in pixels or CSS units (optional) - controls width/height */
	size?: number | string;

	/** Tooltip text to display on hover (optional) - enhances accessibility */
	title?: string;
}

const { name, inline, size, title } = Astro.props;
---

<figure aria-label={title} class="relative inline-flex items-center leading-none group">
	<I {name} {size} is:inline={inline} class="relative top-[0.05rem]" />
	{title && <span class="absolute bottom-full left-1/2 w-max h-max mb-1 py-1 px-1.5 rounded-sm text-background bg-primary text-xs font-serif font-normal leading-tight whitespace-pre-line z-2 opacity-0 invisible -translate-x-1/2 translate-y-1 pointer-events-none group-hover:opacity-100 group-hover:visible group-hover:translate-y-0 transition-[opacity,visibility,translate] duration-150">{title}</span>}
</figure>
