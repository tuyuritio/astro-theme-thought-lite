{
	"name": "astro-theme-thought-lite",
	"type": "module",
	"version": "0.13.0",
	"description": "A modern Astro theme optimized for Cloudflare, focused on content creation",
	"keywords": [
		"astro",
		"theme",
		"blog",
		"cloudflare",
		"svelte",
		"typescript",
		"i18n"
	],
	"homepage": "https://github.com/tuyuritio/astro-theme-thought-lite",
	"repository": {
		"type": "git",
		"url": "https://github.com/tuyuritio/astro-theme-thought-lite.git"
	},
	"bugs": {
		"url": "https://github.com/tuyuritio/astro-theme-thought-lite/issues"
	},
	"license": "GPL-3.0",
	"author": {
		"name": "tuyuritio",
		"url": "https://github.com/tuyuritio"
	},
	"scripts": {
		"dev": "astro dev",
		"check": "astro check",
		"build": "astro build",
		"preview": "wrangler dev",
		"deploy": "wrangler deploy",
		"deploy:dry": "wrangler deploy --dry-run",
		"update": "npx npm-check-updates --interactive",
		"count": "git log --pretty=tformat: --numstat | grep -v package | awk '{ A += $1; S += $2; T += $1 - $2 } END { printf \"+ %s\tLines\\n- %s\tLines\\n= %s\tLines\\n\", A, S, T }'",
		"db:migration": "drizzle-kit generate",
		"db:migrate:local": "wrangler d1 migrations apply DB --local",
		"db:migrate:remote": "wrangler d1 migrations apply DB --remote"
	},
	"dependencies": {
		"@astrojs/cloudflare": "^12.6.7",
		"@astrojs/sitemap": "^3.5.1",
		"@astrojs/svelte": "^7.1.0",
		"@block65/webcrypto-web-push": "^1.0.2",
		"@hbsnow/rehype-sectionize": "^1.0.7",
		"@iconify-json/fa6-brands": "^1.2.6",
		"@iconify-json/lucide": "^1.2.66",
		"@iconify-json/simple-icons": "^1.2.50",
		"@iconify-json/svg-spinners": "^1.2.4",
		"@swup/astro": "^1.7.0",
		"arctic": "^3.7.0",
		"astro": "^5.13.5",
		"astro-icon": "^1.1.5",
		"dotenv": "^17.2.1",
		"drizzle-orm": "^0.44.5",
		"feed": "^5.1.0",
		"jose": "^6.1.0",
		"less": "^4.4.1",
		"luxon": "^3.7.1",
		"medium-zoom": "^1.1.0",
		"reading-time": "^1.5.0",
		"rehype-autolink-headings": "^7.1.0",
		"rehype-external-links": "^3.0.0",
		"rehype-figure": "^1.0.1",
		"rehype-katex": "^7.0.1",
		"remark-breaks": "^4.0.0",
		"remark-cjk-friendly": "^1.2.0",
		"remark-cjk-friendly-gfm-strikethrough": "^1.2.0",
		"remark-directive": "^4.0.0",
		"remark-extended-table": "^2.0.3",
		"remark-flexible-markers": "^1.3.0",
		"remark-footnotes-extra": "^0.3.0",
		"remark-gemoji": "^8.0.0",
		"remark-github-blockquote-alert": "^2.0.0",
		"remark-ins": "^1.2.0",
		"remark-math": "^6.0.0",
		"remark-ruby-directive": "^0.3.0",
		"svelte": "^5.38.6",
		"typescript": "^5.9.2"
	},
	"devDependencies": {
		"@astrojs/check": "^0.9.4",
		"@rollup/plugin-yaml": "^4.1.2",
		"@types/luxon": "^3.7.1",
		"@unocss/reset": "^66.5.0",
		"drizzle-kit": "^0.31.4",
		"prettier": "3.6.2",
		"prettier-plugin-astro": "0.14.1",
		"unocss": "^66.5.0",
		"wrangler": "^4.33.1"
	}
}
