{
	"name": "astro-theme-thought-lite",
	"type": "module",
	"private": true,
	"version": "0.37.0",
	"description": "A modern Astro theme focused on content creation",
	"keywords": [
		"astro",
		"theme",
		"blog",
		"svelte",
		"typescript",
		"i18n"
	],
	"homepage": "https://github.com/tuyuritio/astro-theme-thought-lite",
	"repository": {
		"type": "git",
		"url": "https://github.com/tuyuritio/astro-theme-thought-lite.git"
	},
	"bugs": {
		"url": "https://github.com/tuyuritio/astro-theme-thought-lite/issues"
	},
	"license": "GPL-3.0",
	"author": {
		"name": "tuyuritio",
		"url": "https://github.com/tuyuritio"
	},
	"packageManager": "pnpm@10.30.1",
	"scripts": {
		"new": "tsx --loader esm-loader-yaml scripts/new.ts",
		"dev": "astro dev",
		"check": "astro check",
		"build": "astro build",
		"preview": "astro preview",
		"format": "biome format --write",
		"lint": "biome lint",
		"count": "git log --pretty=tformat: --numstat | grep -v package | awk '{ A += $1; S += $2; T += $1 - $2 } END { printf \"+ %s\tLines\\n- %s\tLines\\n= %s\tLines\\n\", A, S, T }'",
		"prepare": "husky"
	},
	"dependencies": {
		"@astrojs/markdown-remark": "^6.3.10",
		"@astrojs/mdx": "^4.3.13",
		"@astrojs/sitemap": "^3.7.0",
		"@astrojs/svelte": "^7.2.5",
		"@hbsnow/rehype-sectionize": "^1.0.7",
		"@iconify-json/fa6-brands": "^1.2.6",
		"@iconify-json/lucide": "^1.2.92",
		"@iconify-json/simple-icons": "^1.2.71",
		"@iconify/tailwind4": "^1.2.1",
		"@swup/astro": "^1.8.0",
		"@tailwindcss/vite": "^4.2.0",
		"@tuyuritio/rehype-image-figure": "^1.0.0",
		"@tuyuritio/rehype-table-wrapper": "^1.0.1",
		"@tuyuritio/remark-abbreviation": "^1.0.0",
		"@tuyuritio/remark-attribute": "^1.0.0",
		"@tuyuritio/remark-github-alert": "^1.0.0",
		"@tuyuritio/remark-ruby": "^1.0.2",
		"@tuyuritio/remark-spoiler": "^0.0.2",
		"@tuyuritio/shiki-code-copy": "^1.0.0",
		"astro": "^5.17.3",
		"feed": "^5.2.0",
		"katex": "^0.16.28",
		"mdast-util-to-string": "^4.0.0",
		"medium-zoom": "^1.1.0",
		"reading-time": "^1.5.0",
		"rehype-autolink-headings": "^7.1.0",
		"rehype-external-links": "^3.0.0",
		"rehype-katex": "^7.0.1",
		"remark-cjk-friendly": "^2.0.1",
		"remark-cjk-friendly-gfm-strikethrough": "^2.0.1",
		"remark-extended-table": "^2.0.3",
		"remark-flexible-markers": "^1.3.3",
		"remark-footnotes-extra": "^0.3.0",
		"remark-gemoji": "^8.0.0",
		"remark-gfm": "^4.0.1",
		"remark-ins": "^1.2.3",
		"remark-math": "^6.0.0",
		"svelte": "^5.53.1",
		"tailwindcss": "^4.2.0",
		"temporal-polyfill": "^0.3.0",
		"typescript": "^5.9.3",
		"unified": "^11.0.5"
	},
	"devDependencies": {
		"@astrojs/check": "^0.9.6",
		"@biomejs/biome": "2.4.4",
		"@clack/prompts": "^1.0.1",
		"@rollup/plugin-yaml": "^4.1.2",
		"@types/css-tree": "^2.3.11",
		"@types/mdast": "^4.0.4",
		"css-tree": "^3.1.0",
		"esm-loader-yaml": "^1.0.2",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"prettier": "3.8.1",
		"prettier-plugin-astro": "0.14.1",
		"prettier-plugin-svelte": "^3.5.0",
		"satori": "^0.19.2",
		"sharp": "^0.34.5",
		"tsx": "^4.21.0",
		"unifont": "^0.7.4"
	},
	"lint-staged": {
		"*.{js,ts,json,jsonc,css,svelte,astro}": [
			"biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
		]
	}
}
